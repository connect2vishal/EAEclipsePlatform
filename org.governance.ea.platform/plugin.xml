<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

    <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.e4.ui.workbench.swt.E4Application"
            name="ea-platform">
         <property
               name="appName"
               value="ea-platform">
         </property>
         <property
               name="applicationXMI"
               value="org.governance.ea.platform/Application.e4xmi">
         </property>
      </product>
   </extension>
  <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="org.governance.ea.platform.setting.splashHandlers.InteractiveSplashHandler"
            id="org.governance.ea.platform.setting.splashHandlers.interactive">
      </splashHandler>
      <splashHandlerProductBinding
            splashId="org.governance.ea.platform.setting.splashHandlers.interactive"
            productId="org.governance.ea.soa.product">
      </splashHandlerProductBinding>
   </extension>
  <extension
        point="org.eclipse.ui.perspectiveExtensions">
     <perspectiveExtension
           targetID="*">
        <view
              closeable="true"
              id="org.governance.ea.platform.parts.soa.WSDLAnalyzerPartView"
              minimized="false"
              moveable="false"
              relationship="stack"
              showTitle="true"
              visible="true">
        </view>
     </perspectiveExtension>
  </extension>
  <extension
        point="org.eclipse.ui.perspectives">
     <perspective
           class="org.governance.ea.platform.perspective.DefaultPerspectiveFactory"
           id="org.governance.ea.platform.perspective.DefaultPerspective"
           name="Default Perspective">
     </perspective>
     <perspective
           class="org.governance.ea.platform.perspective.EAPerspective"
           id="org.governance.ea.platform.perspective.EAPerspective"
           name="EA Perspective">
     </perspective>
  </extension>
  <extension
        point="org.eclipse.ui.views">
     <view
           class="org.governance.ea.platform.parts.soa.WSDLAnalyzerPartView"
           id="org.governance.ea.platform.parts.soa.WSDLAnalyzerPartView"
           name="WSDL Nalayzer">
     </view>
  </extension>
  <extension
        id="EAPlatformApplication"
        point="org.eclipse.core.runtime.applications">
     <application
           cardinality="singleton-global"
           thread="main"
           visible="true">
        <run
              class="org.eclipse.e4.ui.internal.workbench.swt.E4Application">
        </run>
     </application>
  </extension>

</plugin>
