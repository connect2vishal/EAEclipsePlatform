         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.e4.ui.workbench.swt.E4Application"
            name="to-do">
         <property
               name="appName"
               value="to-do">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.example.e4.rcp.todo.perspective.ToDoPerpective"
            id="com.example.e4.rcp.todo.perspective.ToDoPerpective"
            name="New Perspective">
      </perspective>
   </extension>

</plugin>
